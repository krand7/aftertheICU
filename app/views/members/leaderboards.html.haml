.content-header
  .container
    %h1 Leaderboards

.container
  .content-container
    %table.table
      %col{ width: "50px" }
      %col
      %col{ width: "150px" }
      %col{ width: "150px" }
      %thead
        %tr
          %th
          %th Member
          %th Points
          %th Time
      %tbody
        - @members.each_with_index do |member, index|
          %tr
            %td= index+1
            %td= link_to member.forum_name, member_path(member.forum_name)
            %td= member.points
            %td= member.created_at.strftime("%-d %B %Y")
