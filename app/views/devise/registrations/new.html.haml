- content_for :title, 'Join'
- content_for :description, 'Get involved in our community - the more patient engagement, the better!'

.content-header
  .container
    %h1 Create Your Account


.container
  .content-container
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal', autocomplete: 'off' }) do |f|
      - if resource.errors.any?
        .bs-callout.bs-callout-danger
          %h4
            = pluralize(resource.errors.count, "error")
            prohibited this step from being saved

          %ul
            - resource.errors.full_messages.each do |msg|
              %li= msg

      .form-group
        = f.label :first_name, class: 'control-label col-md-2'
        .col-md-10
          = f.text_field :first_name, class: 'form-control'

      .form-group
        = f.label :last_name, class: 'control-label col-md-2'
        .col-md-10
          = f.text_field :last_name, class: 'form-control'

      .form-group
        = f.label :forum_name, class: 'control-label col-md-2'
        .col-md-10
          = f.text_field :forum_name, class: 'form-control'

      .form-group
        = f.label :email, class: 'control-label col-md-2'
        .col-md-10
          = f.email_field :email, class: 'form-control'

      .form-group
        = f.label :password, class: 'control-label col-md-2'
        .col-md-10
          = f.password_field :password, class: 'form-control', autocomplete: 'off'

      .form-group
        = f.label :password_confirmation, 'Retype password', class: 'control-label col-md-2'
        .col-md-10
          = f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off'

      .form-group
        .col-md-10.col-md-offset-2
          = f.submit "Create an Account", class: 'btn btn-success'
