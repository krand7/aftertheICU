= form_for(@vote) do |f|
  - if @vote.errors.any?
    #error_explanation
      %h2
        = pluralize(@vote.errors.count, "error")
        prohibited this vote from being saved:
      %ul
        - @vote.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :rating
    = f.number_field :rating
  .form-group
    = f.label :deleted
    = f.check_box :deleted
  .form-group
    = f.submit
