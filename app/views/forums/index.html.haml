.content-header
  .container
    %h1 Forums

.container.content-container
  - @forums.each do |forum|
    %h2.centered= link_to "#{forum.name}", forum, class: 'default f400'
    = render 'forums/display', forum: forum, topic_limit: 10
    - if current_user
      = link_to 'Add a new topic', new_forum_topic_path(forum), class: 'btn btn-primary btn-sm'
  - if current_user and current_user.admin?
    = link_to 'New Forum', new_forum_path, class: 'btn btn-primary'
