- content_for :title, 'Settings'
- content_for :description, 'Change your personal information and update your privacy settings'

.content-header
  .container
    %h1 Settings

.container
  .content-container
    = form_for current_user, html: { role: "form", multipart: true, class: 'form-horizontal' }, url: update_settings_path, method: :patch do |f|
      - if current_user.errors.any?
        #error_explanation
          %h2
            = pluralize(current_user.errors.count, "error")
            prohibited these settings from being saved:
      .form-group
        .col-md-2
          = f.label :photo, nil, class: 'control-label'
        .col-md-10
          = f.file_field :photo
          = image_tag current_user.photo_url, class: 'img-responsive', style: 'max-width: 300px'
      .form-group
        = f.label :gender, nil, class: 'control-label col-md-2'
        .col-md-10
          = f.text_field :gender, class: 'form-control'
      .form-group
        = f.label :birthdate, nil, class: 'control-label col-md-2'
        .col-md-10
          = f.date_field :birthdate, placeholder: 'mm/dd/YYYY', class: 'form-control'
      .form-group
        = f.label :forum_name, nil, class: 'control-label col-md-2'
        .col-md-10
          = f.text_field :forum_name, class: 'form-control'
      - if errors = current_user.errors[:forum_name] and errors.present?
        .bs-callout.bs-callout-danger
          - if 'is invalid'.in?(errors)
            Please enter a valid forum name that consists of letters
            %code a-z
            and
            numbers
            %code 0-9
            only.
          - if 'has already been taken'.in?(errors)
            This forum name has already been taken. Please choose another forum name.
      .form-group
        .col-md-10.col-md-offset-2
          = f.submit "Save Changes", class: 'btn btn-primary'
