= form_for @team_member, html: { class: 'form-horizontal' } do |f|
  - if @team_member.errors.any?
    #error_explanation
      %h2
        = pluralize(@team_member.errors.count, "error")
        prohibited this admin_team_member from being saved:
      %ul
        - @team_member.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :photo, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.file_field :photo
  .form-group
    = f.label :name, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :designations, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.text_field :designations, class: 'form-control'
  .form-group
    = f.label :role, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.text_field :role, class: 'form-control'
  .form-group
    = f.label :position, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.number_field :position, class: 'form-control'
  .form-group
    = f.label :bio, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.text_area :bio, class: 'form-control'
  .form-group
    .col-md-10.col-md-offset-2
      = f.submit "#{@team_member.new_record? ? 'Create' : 'Save'} Team Member", class: 'btn btn-primary'
