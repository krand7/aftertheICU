= form_for @highlight, html: { class: 'form-horizontal' } do |f|
  - if @highlight.errors.any?
    #error_explanation
      %h2
        = pluralize(@highlight.errors.count, "error")
        prohibited this admin_highlight from being saved:
      %ul
        - @highlight.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :title, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :description, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.text_field :description, class: 'form-control'
  .form-group
    = f.label :photo, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.file_field :photo
  .form-group
    = f.label :display_date, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.date_select :display_date, class: 'form-control'
  .form-group
    = f.label :link, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.text_field :link, class: 'form-control'
  .form-group
    = f.label :displayed, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.check_box :displayed
  .form-group
    .col-md-10.col-md-offset-2
      = f.submit "#{@highlight.new_record? ? 'Create' : 'New'} Highlight", class: 'btn btn-primary'
