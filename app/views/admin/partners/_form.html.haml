= form_for @partner, html: { class: 'form-horizontal' } do |f|
  - if @partner.errors.any?
    #error_explanation
      %h2
        = pluralize(@partner.errors.count, "error")
        prohibited this admin_partner from being saved:
      %ul
        - @partner.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :photo, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.file_field :photo
  .form-group
    = f.label :name, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :description, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.text_area :description, class: 'form-control'
  .form-group
    = f.label :link, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.text_field :link, class: 'form-control'
  .form-group
    = f.label :position, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.number_field :position, class: 'form-control'
  .form-group
    = f.label :displayed, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.check_box :displayed
  .form-group
    .col-md-10.col-md-offset-2
      = f.submit "#{@partner.new_record? ? 'Create' : 'Save'} Partner", class: 'btn btn-primary'
